{
  "_metadata": {
    "name": "WhatsApp Bot Dashboard",
    "version": "2.0.0",
    "author": "Rahaman Leon",
    "email": "rahaman.leon@example.com",
    "copyright": "Â© 2024 Rahaman Leon. All rights reserved.",
    "license": "MIT",
    "description": "Advanced WhatsApp Bot with Dashboard - Created by Rahaman Leon",
    "warning": "Unauthorized removal of author credits is strictly prohibited"
  },
  "whatsapp": {
    "clientId": "whatsapp-bot",
    "headless": true,
    "dataPath": "./auth_data"
  },
  "bot": {
    "prefix": "!",
    "name": "DORA Bot",
    "defaultLang": "en",
    "timezone": "Asia/Dhaka",
    "enableWordTriggers": true,
    "enableOnReply": true
  },
  "adminBot": [
    "8801723153138@c.us",
    "6073436114963@lid"
  ],
  "adminOnly": false,
  "whiteListMode": {
    "enabled": false,
    "whiteListIds": []
  },
  "database": {
    "type": "json",
    "uri": "",
    "path": "./data/database.json",
    "autoSync": true,
    "examples": {
      "json": {
        "type": "json",
        "path": "./data/database.json",
        "autoSync": true
      },
      "mongodb": {
        "type": "mongodb",
        "uri": "mongodb://localhost:27017/whatsapp-bot",
        "options": {
          "useNewUrlParser": true,
          "useUnifiedTopology": true
        }
      },
      "sqlite": {
        "type": "sqlite",
        "path": "./data/database.sqlite",
        "options": {
          "verbose": false
        }
      }
    }
  },
  "dashBoard": {
    "enabled": true,
    "port": 3000
  },
  "autoRestart": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "delay": 5000
  },
  "autoUptime": {
    "enabled": true,
    "interval": 3600000
  },
  "hideNotiMessage": {
    "commandNotFound": false,
    "onlyAdminUse": false,
    "threadNotAllowed": false,
    "userNotAllowed": false
  },
  "logEvents": {
    "disableAll": false,
    "message": true,
    "reaction": true,
    "join": true,
    "leave": true
  },
  "ai": {
    "openai": {
      "apiKey": "your-openai-api-key",
      "model": "gpt-3.5-turbo"
    }
  },
  "rateLimiting": {
    "enabled": true,
    "maxRequests": 25,
    "windowMs": 60000,
    "minDelay": 1200,
    "maxDelay": 10000,
    "enableRetry": true,
    "maxRetries": 3
  }
}
